    <!-- 内容 -->
    <section class="section-content">
        <div class="banxin">

            <!-- 时间公告 -->
            <div class="list-time">
                <span class="laba">

                </span>
                <div class="timeOver">
                    今天是<span class="time"></span>
                    星期<span class="weekeday"></span>
                </div>
            </div>
            <!-- 所在位置 -->
            <div class="suozai">
