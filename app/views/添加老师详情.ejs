                <div class="titleTa clearfix">
                    <div class="title-xiangqing active">添加老师</div>
                    <div class="title-xiangqing">添加学生管理员</div>
                </div>
                <div class="xiangqing-content">
                    <!-- 添加老师 -->
                    <ul class="teacherList teacherlistAdd">
                        <form action="/addteacher" method="post">
                            <li class="clearfix">教师工号</li>
                            <li><input type="text" name="nameNumber" placeholder="请输入教师工号"></li>
                            <li class="clearfix">姓名</li>
                            <li><input type="text" name="name" placeholder="请输入姓名"></li>
                            <li class="clearfix">职位</li>
                            <li><input type="text" name="job" placeholder="请输入职位"></li>
                            <li class="clearfix">联系电话</li>
                            <li><input type="text" name="phoneNumber" placeholder="请输入联系电话"></li>
                            <li class="clearfix">用户名</li>
                            <li><input type="text" name="admin" placeholder="请输入自定义用户名"></li>
                            <li class="clearfix">密码</li>
                            <li><input type="password" name="psw" placeholder="请输入自定义密码"></li>
                            <input type="submit" value="点击提交" class="tianjia">
                        </form>
                    </ul>
                    <!-- 学生管理员列表 -->
                    <ul class="teacherList teacherlistAdd" style="display:none;">
                        <form action="/addstudent" method="post">
                            <li class="clearfix">学生学号</li>
                            <li><input type="text" name="nameNumber" placeholder="请输入教师工号"></li>
                            <li class="clearfix">姓名</li>
                            <li><input type="text" name="name" placeholder="请输入姓名"></li>
                            <li class="clearfix">职位</li>
                            <li><input type="text" name="job" placeholder="请输入职位"></li>
                            <li class="clearfix">联系电话</li>
                            <li><input type="text" name="phoneNumber" placeholder="请输入联系电话"></li>
                            <li class="clearfix">用户名</li>
                            <li><input type="text" name="admin" placeholder="请输入自定义用户名"></li>
                            <li class="clearfix">密码</li>
                            <li><input type="password" name="psw" placeholder="请输入自定义密码"></li>
                            <input type="submit" value="点击提交"  class="tianjia">
                        </form>
                    </ul>
                </div>
            </div>
